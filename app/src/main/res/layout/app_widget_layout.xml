<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <Button
        android:id="@+id/btnWidgetDecimalToBinary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decimal a Binario" />

    <Button
        android:id="@+id/btnWidgetBinaryToDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWidgetDecimalToBinary"
        android:text="Binario a Decimal" />

    <TextView
        android:id="@+id/tvWidgetResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnWidgetBinaryToDecimal"
        android:text="Resultado" />
</RelativeLayout>
